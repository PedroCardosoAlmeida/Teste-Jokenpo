@page "/vencedores"
@inherits ListaDeVencedoresBase


<h3>@TextoTitulo</h3>
<a href="@("/")" class="btn btn-primary m-1">Jogar Denovo</a>
@if (Vencedores.Count > 0)
{
    <div class="card-deck">
        @foreach (var jogador in Vencedores)
        {
            <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                <div class="card-header">
                    <h3>@jogador.Nome @jogador.SobreNome</h3>
                </div>
                <img class="card-img-top imageThumbnail" src="@jogador.CaminhoFoto" />
            </div>
        }
    </div>
}