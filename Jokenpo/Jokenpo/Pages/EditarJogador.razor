@page "/editjogador/{id}"
@page "/editjogador"
@inherits EditarJogadorBase


<EditForm Model="@JogadorModelo" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <h3>@TextoTitulo</h3>
    <hr />
    <ValidationSummary />
    <div class="form-group row">
        <label for="firstName" class="col-sm-2 col-form-label">
            Nome:
        </label>
        <div class="col-sm-10">
            <InputText id="nome" class="form-control" placeholder="First Name"
                       @bind-Value="JogadorModelo.Nome" />
            <ValidationMessage For="@(()=> JogadorModelo.Nome)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="lastName" class="col-sm-2 col-form-label">
            Sobrenome
        </label>
        <div class="col-sm-10">
            <InputText id="sobrenome" class="form-control" placeholder="Last Name"
                       @bind-Value="JogadorModelo.SobreNome" />
            <ValidationMessage For="@(()=> JogadorModelo.SobreNome)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">
            Movivmentos
        </label>
        <div class="col-sm-10">
            <InputSelect @bind-Value="JogadorModelo.movementos" class="form-control">
                @foreach (var movemento in Enum.GetValues(typeof(Movementos)))
                {
                    <option value="@movemento">@movemento</option>
                }
            </InputSelect>

        </div>
    </div>
    <button class="btn btn-primary" type="submit">Enviar</button>
    <button class="btn btn-danger" type="button" @onclick="Deletar_Click">Deletar</button>
</EditForm>
